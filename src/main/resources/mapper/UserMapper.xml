<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pockettech.qiusheng.mapper.UserMapper">

    <insert id="updateUser" parameterType="org.pockettech.qiusheng.entity.User">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="uid">
            select uid from user where user_name = #{user_name}
        </selectKey>
        insert into `user` (user_name) values (#{user_name})
        ON DUPLICATE KEY UPDATE
        user_name = values(user_name)
    </insert>

</mapper>